{
  "name": "hotcakey",
  "version": "0.1.0",
  "description": "the cross platform hotkey tool for node.js and electron",
  "homepage": "https://github.com/daylilyfield/hotcakey",
  "bugs": "https://github.com/daylilyfield/hotcakey/issues",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "cc": "bear -- npm run build",
    "build": "node-gyp configure --debug && node-gyp build --debug",
    "test": "echo \"Error: no test specified\" && exit 1",
    "examples:node": "ts-node examples/node/node.ts",
    "install": "prebuild-install || node-gyp rebuild"
  },
  "keywords": [
    "hotkey",
    "shortcut",
    "electron"
  ],
  "author": "daylilyfield",
  "license": "MIT",
  "binary": {
    "napi_versions": [
      4
    ]
  },
  "devDependencies": {
    "@types/bindings": "^1.5.1",
    "bindings": "^1.5.0",
    "node-gyp": "^8.1.0",
    "node-addon-api": "^4.2.0",
    "prebuild": "^11.0.0",
    "prebuild-install": "^6.1.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
